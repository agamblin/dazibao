{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.13.1",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.0-next.68"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "24.0.11",
    "@types/node": "11.11.6",
    "@types/node-sass": "^4.11.0",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.3",
    "@types/react-router-dom": "^4.3.2",
    "prettier": "^1.17.0",
    "react-app-rewired": "^2.1.3",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "resolutions": {
    "babel-jest": "24.7.1",
    "babel-loader": "8.0.5"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "launch-tests": "react-app-rewired test --env=jsdom",
    "launch-tests-ci": "CI=true react-app-rewired test --env=jsdom",
    "eject": "react-app-rewired eject",
    "test": "sh launch-tests.sh",
    "shell": "sh launch-shell.sh",
    "lint": "tslint -t stylish --project tsconfig.json --config tslint.json"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --config .prettierrc.json --write",
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/app/$1",
      "@styles/(.*)": "<rootDir>/src/styles/$1"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
