{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"importHelpers": true,
		"jsx": "react",
		"alwaysStrict": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"strictNullChecks": false,
		"outDir": "./build",
		"typeRoots": ["node_modules/@types"],
		"baseUrl": "./src",
		"paths": {
			"@typings/*": ["typings/*"],
			"@controllers/*": ["lib/controllers/*"],
			"@factories/*": ["lib/factories/*"],
			"@models/*": ["db/models/*"],
			"@services/*": ["lib/services/*"],
			"@utils/*": ["lib/utils/*"],
			"@routes/*": ["lib/routes/*"],
			"@middlewares/*": ["lib/middlewares/*"],
			"@config/*": ["config/*"],
			"@tests/*": ["tests/*"],
			"@app": ["lib/app.ts"],
			"@db": ["db/index.ts"]
		}
	},
	"include": ["./src/**/*"]
}
